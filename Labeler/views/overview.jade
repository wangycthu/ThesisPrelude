doctype html    
html
    head
        title= title
        link(rel='stylesheet', href='css/semantic.min.css')
        link(rel='stylesheet', href='css/style.css')
        link(rel='stylesheet', href='css/overview.css')
        script(src='js/jquery.min.js')
        script(src='js/jquery.session.js')
        script(src='js/semantic.min.js')
        script(src='js/highcharts.js')
        script(src='js/exporting.js')
        script(src='js/overview.js')
        script(type='text/javascript').
            $(function () {
                $('#chart-container').highcharts({
                    chart: { 
                        type: 'bar'
                    },
                    title: {
                        text: '微博数据标注情况'
                    },         
                    subtitle: {
                        text: 'source: ThesisLabeler'
                    },
                    xAxis: {
                        categories: !{JSON.stringify(topicnames)},
                        title: {
                            text: null
                        }    
                    },
                    yAxis: {
                        min: 0,
                            title: {
                            text: 'weibo items',
                            align: 'high'
                        },
                        labels: {
                            overflow: 'justify'
                        }
                    },
                    tooltip: {
                        valueSuffix: ' 条'
                    },
                    plotOptions: {
                        bar: {
                            dataLabels: {
                                enabled: true
                            }
                        }
                    },
                    legend: {
                        layout: 'vertical',
                        align: 'right',
                        verticalAlign: 'top',
                        x: -40,
                        y: 100,
                        floating: true,
                        borderWidth: 1,
                        backgroundColor: ((Highcharts.theme && Highcharts.theme.legendBackgroundColor) || '#FFFFFF'),
                        shadow: true
                    },
                    credits: {
                        enabled: false
                    },
                    series: !{JSON.stringify(statsData)}
                });
            });    
    body
      block content
        div.ui.segment
          h2.ui.header
            i.setting.icon
            div.content 情感标注后台
              div(class="sub header") Beta
          div.ui.breadcrumb
            a.section Home
            div.divider |
            div(class="active section") overview
            div.divider |
            a.section(href="/check") check
            div.divider |
            a.section(href="/label") label

          div.ui.segment
              each keyword_list, topic_name in topic_list
                div.ui.dropdown.link.item(style="margin-left:10px;")
                  a.text(href="/overview?topicname="+topic_name)= topic_name
                  i.dropdown.icon
                
        div#chart-container

